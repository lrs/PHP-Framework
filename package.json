{
    "name": "php-framework",
    "version": "0.0.1",
    "description": "Light MVC framework",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=development gulp",
        "dist": "cross-env NODE_ENV=production gulp",
        "test:unit": "jest",
        "test:e2e": "cypress",
        "test:e2e-headless": "cypress run --headless",
        "clear:twig": "sudo rm -rf storage/cache/twig"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lrs/framework"
    },
    "keywords": [
        "PHP",
        "TWIG",
        "Typescript"
    ],
    "author": "Lee Spendlove <lee.spendlove@gmail.com>",
    "license": "https://opensource.org/licenses/MIT",
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "devDependencies": {
        "browserslist": "^4.19.1",
        "cross-env": "^7.0.3",
        "cypress": "^9.1.1",
        "gulp": "^4.0.2",
        "gulp-autoprefixer": "^8.0.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-if": "^3.0.0",
        "gulp-notify": "^4.0.0",
        "gulp-plumber": "^1.2.1",
        "gulp-sass": "^5.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "sass": "^1.45.0"
    }
